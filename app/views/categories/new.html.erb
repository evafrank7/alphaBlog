<h1 class="text-center mt-4"> Create a new Category</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-10 col-lg-8">
      <%= render 'shared/errors', object: @category %>
      <%= form_with(model: @category, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="row mb-3">
          <%= f.label :name, "Category", class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a name" %>
          </div>
        </div>

        <div class="row">
          <div class="col text-center">
            <%= f.submit(@category.new_record? ? "Create Category" : "Update Category", class: "btn btn-outline-light btn-lg") %>
          </div>
        </div>
      <% end %>

      <div class="text-center mb-3">
        <%= link_to '[ Cancel & Return to Articles ]', articles_path, class: "text-info" %>
      </div>
    </div>
  </div>
</div>
